@model WebApplication1.Models.ProduitViewModel;




<form asp-action="Add" asp-controller="Produit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Libelle">Libelle :</label>
        <input type="text" name="Libelle" asp-for="Libelle" class="form-control" />
        <span asp-validation-for="Libelle" class="text-danger"></span></>
    </div>
    <div class="form-group">
        <label asp-for="PU">Prix unitaire :</label>
        <input asp-for="PU" name"PU" class="form-control" />
        <span asp-validation-for="PU" class="text-danger"></span></>
    </div>

    <div class="form-group">
        <label asp-for="Category">Categories :</label>
        <select asp-for="CategoryId" name="CategoryId" class="form-control">
            <option value"">Selectionné une Categorie</option>
            @foreach (Category c in ViewBag.category)
            {
                <option value="@c.Id">@c.Libelle</option>

            }
        </select>

    </div>


    <div class="form-group">

        <label asp-for="Image">Photo :</label>
        <input asp-for="Image" type="file" name="MyImage" accept="images/*" class="form-control-file" />

        <span asp-validation-for="Image" class="text-danger"></span></>

    </div>
    <div class="form-group">
        <label asp-for="Qte" class="control-label"></label>
        <input asp-for="Qte" class="form-control" />
        <span asp-validation-for="Qte" class="text-danger"></span>
    </div>




    <button type="submit" class="btn btn-primary">Ajouter</button>
</form>
