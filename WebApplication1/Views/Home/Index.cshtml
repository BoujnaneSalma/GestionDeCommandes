@model List<Produit>
<h2>Tableau de bord</h2>

  
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white">Total de Categories</div>
            <div class="card-body text-primary text-center">
                    <p class="card-text"><strong>@ViewBag.TotalCategory</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-success">
                <div class="card-header bg-success text-white">Total de Commandes</div>
            <div class="card-body text-success text-center">
                    <p class="card-text"><strong>@ViewBag.TotalCommande</strong></p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">Total de Produits</div>
            <div class="card-body text-danger text-center">
                    <p class="card-text"><strong>@ViewBag.TotalProduit</strong></p>
                </div>
            </div>
        </div>
       

    </div>


