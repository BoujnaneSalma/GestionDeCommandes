@model List<Category>

<a asp-action="Add" class="btn btn-primary"><i class="fas fa-plus"></i> Ajouter une catégorie</a>

<br />
<table id="mytable" class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>Identifiant</th>
            <th>Libellé</th>
            <th>Produits</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category c in Model)
        {
            <tr>
                <td>@c.Id</td>
                <td>@c.Libelle</td>
                <td>
                    <ul>
                        @foreach (Produit p in c.Produits)
                        {
                            <li>@p.Libelle</li>
                        }
                    </ul>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Update" asp-controller="Category" asp-route-id="@c.Id" class="btn btn-primary"><i class="fas fa-edit"></i> </a>
                        <a class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?')" asp-controller="Category" asp-action="Delete" asp-route-id="@c.Id"><i class="fas fa-trash"></i> </a>
                        <a asp-action="Detail" asp-controller="Category" asp-route-id="@c.Id" class="btn btn-success"><i class="fas fa-info-circle"></i> </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#mytable').DataTable();
        });
    </script>
}
